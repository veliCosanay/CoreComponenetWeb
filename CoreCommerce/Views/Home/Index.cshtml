@model List<CoreCommerce.Models.Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-5">
    <div class="text-center mb-4">
        <h2 class="section-title px-5"><span class="px-2">Ürünlerimiz</span></h2>
    </div>
    <div class="row px-xl-5 pb-3">
        @foreach (var product in Model)
        {
            <div class="col-lg-2 col-md-6 col-sm-12 pb-1">
                <div class="card product-item border-0 mb-4">
                    <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                        @if (product.image != null && product.image.Length > 0)
                        {
                            <img class="img-fluid w-100" src="@Url.Action("GetImage", "Product", new { id = product.id })" alt="@product.name">
                        }
                        else
                        {
                            <img class="img-fluid w-100" src="~/images/no-image.png" alt="Ürün Resmi Yok">
                        }
                    </div>
                    <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                        <h6 class="text-truncate mb-3">@product.name</h6>
                        <div class="d-flex justify-content-center">
                            <h6>@product.price.ToString("C0")</h6>
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-between bg-light border">
                        <a href="/Home/ProductDetail/@product.id" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>Detayları Gör</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

