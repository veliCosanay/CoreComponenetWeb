@model CoreCommerce.Models.Customer
@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Yeni Üyelik</h3>
                </div>
                <div class="card-body">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <ul>
                                @foreach (var modelState in ViewData.ModelState.Values)
                                {
                                    foreach (var error in modelState.Errors)
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                }
                            </ul>
                        </div>
                    }

                    <form method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="name" class="form-label">Ad</label>
                                @Html.TextBoxFor(m => m.name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.name, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="surname" class="form-label">Soyad</label>
                                @Html.TextBoxFor(m => m.surname, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.surname, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="mail" class="form-label">Email</label>
                            @Html.TextBoxFor(m => m.mail, new { @class = "form-control", type = "email" })
                            @Html.ValidationMessageFor(m => m.mail, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            <label for="city" class="form-label">Şehir</label>
                            @Html.TextBoxFor(m => m.city, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.city, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Şifre</label>
                            @Html.PasswordFor(m => m.password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.password, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            <label for="ImageFile" class="form-label">Profil Fotoğrafı</label>
                            <input type="file" name="ImageFile" class="form-control" accept="image/*" />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                            <a href="@Url.Action("Login", "Home")" class="btn btn-secondary">Zaten üye misiniz? Giriş yapın</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}