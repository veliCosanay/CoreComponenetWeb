@model CoreCommerce.Models.Product
@{
    ViewData["Title"] = "ProductDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                @if (Model.image != null)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.image)" class="card-img-top" alt="@Model.name" style="height: 400px; object-fit: cover;">
                }
                else
                {
                    <img src="~/images/no-image.jpg" class="card-img-top" alt="No Image" style="height: 400px; object-fit: cover;">
                }

                <div class="card-body">
                    <h2 class="card-title text-center mb-4">@Model.name</h2>
                    <p class="card-text">@Model.description</p>
                    <p class="card-text"><strong>Fiyat: </strong>@Model.price ₺</p>
                    <p class="card-text"><strong>Stok: </strong>@Model.stock</p>

                    <div class="text-center mt-4">
                        <a href="/Home/Index" class="btn btn-primary">Geri Dön</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>