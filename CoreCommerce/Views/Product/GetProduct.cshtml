@model CoreCommerce.Models.Product
@{
    ViewData["Title"] = "GetProduct";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<br />
<div class="container mt-4">
    @using (Html.BeginForm("UpdateProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(product => product.id)
        
        <div class="mb-3">
            <label for="name" class="form-label">Ad</label>
            @Html.TextBoxFor(product => product.name, new { @class = "form-control" })
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Açıklama</label>
            @Html.TextBoxFor(product => product.description, new { @class = "form-control" })
        </div>

        <div class="mb-3">
            <label for="price" class="form-label">Fiyat</label>
            @Html.TextBoxFor(product => product.price, new { @class = "form-control", type = "number", step = "0.01" })
        </div>

        <div class="mb-3">
            <label for="stock" class="form-label">Stok</label>
            @Html.TextBoxFor(product => product.stock, new { @class = "form-control", type = "number" })
        </div>

        <div class="mb-3">
            @if (Model.image != null && Model.image.Length > 0)
            {
                <div class="mb-2">
                    <img src="@Url.Action("GetImage", "Product", new { id = Model.id })"
                         alt="Ürün Fotoğrafı" style="width:100px; height:100px; object-fit: cover;" />
                </div>
            }
            <label for="ImageFile" class="form-label">Yeni Fotoğraf</label>
            <input type="file" name="ImageFile" class="form-control" accept="image/*" />
        </div>

        <button type="submit" class="btn btn-primary">Güncelle</button>
    }
</div>

